/* pages/search/index.wxss */
/* 头部部分样式 */
.search{
  height: 70rpx;
  background-color: #eeeeee;
  padding:5px;
}
.header{
  height:60rpx;
  background-color: #fff;
  border-radius: 4px;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding:0 20rpx;
}
.header text{
  margin-left:20rpx;
}

.filter{
  display: flex;
  justify-content: space-around;
  padding:20rpx 0;
  border-bottom:1.5px solid #ececec;
  margin-bottom: 10px;
}
.active{
  color:#ff4760;
}
.image-lift{
  width:200rpx;
  height:200rpx;
}
.image-lift image{
  width:100%;
  height: 100%;
}
.shopList{
  display: flex;
  justify-content: space-between;
  border-bottom:1.5px solid #eaeaea;
  padding-bottom:20rpx;
  margin-bottom:20rpx;
}
.text-right{
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left:20rpx;
}
.desc-shop{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.price{
  color:#ff4b63;
  font-size:12px;
}
.price text{
  font-size:16px;
}
/* 正在加载部分 */
.loading{
  color:#ddd;
  text-align: center;
  font-size:14px;
}