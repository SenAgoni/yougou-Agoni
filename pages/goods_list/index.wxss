/* pages/search/index.wxss */
.filter{
  display: flex;
  justify-content: space-around;
  padding:20rpx 0;
  border-bottom:1.5px solid #ececec;
  margin-bottom: 10px;
}
.active{
  color:#ff4760;
}
.image-lift{
  width:200rpx;
  height:200rpx;
}
.image-lift image{
  width:100%;
  height: 100%;
}
.shopList{
  display: flex;
  justify-content: space-between;
  border-bottom:1.5px solid #eaeaea;
  padding-bottom:20rpx;
  margin-bottom:20rpx;
}
.text-right{
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left:20rpx;
}
.desc-shop{
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.price{
  color:#ff4b63;
  font-size:12px;
}
.price text{
  font-size:16px;
}