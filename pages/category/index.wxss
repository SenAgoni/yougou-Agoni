/* pages/category/index.wxss */
/* 主体内容部分 */
.containerTabs{
  display: flex;
  justify-content: space-between;
  margin-top:20rpx;
  width:100%;
  position: fixed;
  top:80rpx;
  bottom:0;
}
.containerTab .menu{
  overflow-y: scroll;
  width:200rpx;
  text-align: center;
}
.containerTab .navbar{
  font-size:30rpx;
  padding:20rpx 0;
  background-color: #f5f5f5;
  border-bottom:1px solid #eee;
  position: relative;
}
.tabClick::before{
  /* before是一个行内元素，所以要转换成块级元素而且必须要加上content这一个内容把它撑开 */
  display: block;
  content: '';
  width:3px;
  background-color: #eb4450;
  height:55rpx;
  position: absolute;
  top:20rpx;
  left:0;
}
.containTab{
  flex:1;
  padding:0 15rpx;
  text-align: center;
  font-size:28rpx;
}
.containTab image{
  width:100%;
  height: 234rpx;
}
.containerTab .containerTabs .tabClick{
  color:#eb4450;
  background-color: #fff;
}
.containTab .headerPhoto .text{
  margin-top:30rpx;
}
.list{
  overflow-y: scroll;
  flex:1
}
.containTab .shoplist{
  display: flex;
  justify-content: space-around;
  flex-wrap: wrap;
}
.containTab  .tabList{
  width:30%;
  height:80rpx;
  margin-bottom:100rpx;
}
.containTab  .tabList:nth-child(-n+3){
  margin-top:50rpx;
}
.containTab .tabList image{
  width:120rpx;
  height:120rpx;
}
.containTab  .tabList text{
  font-size:28rpx;
  margin-top:60rpx;
}