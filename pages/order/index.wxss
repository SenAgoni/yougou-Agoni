/* pages/order/index.wxss */
.get-address{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:20rpx;
}
.cart-header{
  font-size:14px;
  color:#444444;
  padding:35rpx 20rpx;
}
.delivery{
  display: flex;
  justify-content: space-between;
}
.delivery-phone{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.delivery-user{
  margin-bottom:25rpx;
}
.delivery-user text,.delivery-phone .arrow{
  margin-left:35rpx;
}
.bar-image{
  display: block;
  width:100%;
  height:20rpx;
}
.blank{
  margin-bottom: 25rpx;
}
.cart-shop{
  background-color: #fff;
  margin-bottom: 150rpx;
}
.icon-title{
  padding:20rpx;
}
/* 商品列表部分 */
.shoplist{
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding:0 20rpx;
}
.shoplist-icon{
  margin-right:20rpx;
  position: relative;
}
.shoplist-detail-image{
  width:200rpx;
  height:200rpx;
}
.shoplist-detail-image image{
  width:100%;
  height: 100%;
}
.shoplist-detail{
  display: flex;
  justify-content: space-between;
  border-bottom:1px solid #eeeeee;
  padding:20rpx 0;
}
.shoplist-detail-right{
  flex:1;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  margin-left:15rpx;
}
.shoplist-detail-desc text{
   display: -webkit-box;
  font-size:14px;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
}
.shoplist-detail-price{
  display: flex;
  justify-content: space-between;
}
.add-reduce{
  display: flex;
  justify-content: space-around;
}
.reduce,.add{
  width:40rpx;
  height: 40rpx;
  border:1.5px solid #666666;
  text-align: center;
  line-height: 40rpx;
  margin:0 15rpx;
}
.shoplist-detail-price text{
  color:#eb4450;
}
.shoplist-detail-price .price{
  font-size:12px;
}
/* 底部部分 */
.footer{
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: #fff;
  position: fixed;
  bottom: 0;
  left:0;
  width:100%;
  font-size:14px;
}
.checkAll{
  display: flex;
  justify-content: space-between;
}
.add-all .price{
  color:#eb4450;
}
.price-text{
  display: flex;
  justify-content: space-between;
}
.express{
  font-size:12px;
  color:#999;
}
.computed{
  color:#fff;
  background-color:#eb4450;
  height: 100rpx;
  width:30%;
  line-height: 100rpx;
  text-align: center;
}
.red{
  color:red;
}
.gray{
  color: #999;
}