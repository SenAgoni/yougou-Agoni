/* pages/goods_detail/index.wxss */
/* 头部图片部分 */
.header-image{
  width:100%;
  height:610rpx;
}
.header-image image{
  width:100%;
  height:100%;
}
/* 商品详情部分 */
.container .price{
  font-size:55rpx;
  color:#eb4450;
  margin:15rpx 0;
}
.detail{
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.goods-detail{
  flex:7;
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size:13px;
}
.goods-star{
  flex:3;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: flex-end;
  font-size:12px;
  color:#9b9b9b;
}
.goods-detail::after{
  width:3px;
  height:100rpx;
  display: block;
  content: '';
  background-color: #e7e7e7;
  margin-left:50rpx;
}
.express{
  font-size:12px;
  color:#a5a5a5;
  margin-top:25rpx;
}
.free{
  margin-left:20rpx;
}
/* 间隔部分 */
.interval{
  width:100%;
  height: 20rpx;
  background-color: #f4f4f4;
  margin:30rpx 0;
}
/* 促销部分 */
.sales-detail{
  color:red;
  margin-left:50rpx;
}
/* 页脚部分 */
.footer{
  display: flex;
  justify-content: space-between;
  position: absolute;
  bottom:0;
  width:100%;
}
.cart image{
  width:50rpx;
  height:50rpx;
}
.now-buy,.add-cart,.phone,.cart{
  flex:1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.phone,.cart{
  flex-direction: column;
  justify-content: space-between;
  font-size:28rpx;
  color: #6f6f6f;
}
.now-buy,.add-cart{
  color:#fff;
  font-size:32rpx;
}
.add-cart{
  background-color:#f4b73f;
}
.now-buy{
  background-color: #eb4450;
}
.phone icon{
  font-size:60rpx;
}
